{
  "name": "dbt-language-server",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Configuration",
      "properties": {
        "dbtFivetranExtension.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "compile:all": "npm run format && npm run compile",
    "watch": "tsc -b -w",
    "format": "prettier --write \"client/src/**/*.ts\" \"server/src/**/*.ts\"",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "electron-rebuild": "electron-rebuild -v 13.1.7",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^12.20.16",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "electron-rebuild": "^2.3.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@fivetrandevelopers/zetasql": "1.0.0-alpha.8"
  }
}
