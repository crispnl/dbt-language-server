{
  "name": "dbt-language-server",
  "version": "0.0.1",
  "publisher": "Fivetran",
  "engines": {
    "vscode": "^1.54.0"
  },
  "activationEvents": [
    "onLanguage:sql",
    "workspaceContains:./dbt_project.yml"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Configuration",
      "properties": {
        "dbtFivetranExtension.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "editor.showQueryPreview",
        "title": "Show Query Preview"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "editor.showQueryPreview",
          "group": "navigation@1.31"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "compile:all": "npm run format && npm run compile",
    "watch": "tsc -b -w",
    "format": "prettier --write \"client/src/**/*.ts\" \"server/src/**/*.ts\"",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "lint": "eslint . --ext .ts",
    "test": "mocha \"server/out/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.16",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@fivetrandevelopers/zetasql": "^1.0.0-alpha.13"
  }
}
